# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Configuration
# Replace with your PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/planning_center_dev

# Redis Configuration
# Replace with your Redis connection string
REDIS_URL=redis://localhost:6379

# Security Configuration
# IMPORTANT: Generate secure random keys for production!
# JWT_SECRET: Use a long, random string (64+ characters)
# COOKIE_SECRET: Must be at least 32 characters
# ENCRYPTION_KEY: Must be exactly 32 characters
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure
COOKIE_SECRET=your-cookie-secret-32-chars-minimum-length-required
ENCRYPTION_KEY=32-character-encryption-key-here

# Planning Center OAuth Configuration
# Get these from your Planning Center Developer Account:
# https://developer.planning.center/
PCO_CLIENT_ID=your-pco-client-id
PCO_CLIENT_SECRET=your-pco-client-secret
PCO_REDIRECT_URI=http://localhost:3001/api/v1/auth/planning-center/callback

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# MCP Server Configuration
MCP_SERVER_NAME=planning-center-mcp
MCP_SERVER_VERSION=1.0.0
