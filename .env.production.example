# Production Environment Configuration
# Copy to .env.production and update with your production values

# Server Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Database (Use managed database service)
DATABASE_URL=postgresql://username:password@hostname:5432/planning_center_prod

# Redis (Use managed Redis service)
REDIS_URL=redis://hostname:6379

# Security Secrets (Generate strong, unique values for production)
JWT_SECRET=your-production-jwt-secret-32-chars-minimum
COOKIE_SECRET=your-production-cookie-secret-32-chars-minimum
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Planning Center OAuth (Get from PCO Developer Console)
PCO_CLIENT_ID=your-production-pco-client-id
PCO_CLIENT_SECRET=your-production-pco-client-secret
PCO_REDIRECT_URI=https://your-domain.com/api/v1/auth/planning-center/callback

# Frontend URL (Your deployed frontend URL)
FRONTEND_URL=https://your-frontend-domain.com

# MCP Configuration
MCP_SERVER_NAME=planning-center-mcp
MCP_SERVER_VERSION=1.0.0

# Optional: Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Optional: Analytics
ANALYTICS_API_KEY=your-analytics-key